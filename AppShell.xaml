<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Encryptor_Application.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Encryptor_Application"
    xmlns:pages ="clr-namespace:Encryptor_Application.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="Encryptor_Application"
    >
    <FlyoutItem
        Title="Home"
        Route="EncryptorPage">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate pages:MainPage }"
            Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem
        Title="Encryption"
        Route="EncryptionPage">
        <ShellContent
            Title="Encryption"
            ContentTemplate="{DataTemplate pages:EncryptionPage }"
            Route="EncryptorPage" />
    </FlyoutItem>

    <FlyoutItem
        Title="Decryption"
        Route="DecryptionPage">
        <ShellContent
            Title="Decryption"
            ContentTemplate="{DataTemplate pages:DecryptionPage }"
            Route="DecryptionPage" />
    </FlyoutItem>

</Shell>
