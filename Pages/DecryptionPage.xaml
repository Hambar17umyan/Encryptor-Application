<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Encryptor_Application.Controls"
             xmlns:viewModels ="clr-namespace:Encryptor_Application.ViewModels"
             x:Class="Encryptor_Application.Pages.DecryptionPage"
             Title="DecryptionPage"
             x:DataType="viewModels:DecryptionPageViewModel">
    <Grid>
        <Image Source="mango.jpg"
       Aspect="AspectFill"
    IsVisible="True" />

        <ScrollView>
            <VerticalStackLayout 
            Padding="10"
            Spacing="10">
                <Border 
                StrokeThickness="10"
                Stroke="Green"
                BackgroundColor="LightGreen"
                Padding = "10"
                StrokeShape="RoundRectangle 12">

                    <VerticalStackLayout
                    HorizontalOptions = "Center"
                    Padding = "30,0"
                    Spacing = "25">


                        <controls:BoldLabel 
                        HorizontalTextAlignment="Center"
                        Text="Choose file to decrypt!" 
                        FontSize = "20"/>

                        <HorizontalStackLayout 
                        Padding = "30,0"
                        Spacing = "25"
                        HorizontalOptions="Center">

                            <Button 
                            BackgroundColor="Gray"
                            Text = "Choose File"
                            Command = "{Binding ChooseFileToDecryptCommand}"/>

                            <Button 
                            Text = "Submit"
                            Command = "{Binding SubmitFileToDecryptCommand}"/>
                        </HorizontalStackLayout>

                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>